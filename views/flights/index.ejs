<%- include('../partials/header') %>

<h2>Flights List</h2>
<table>
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight No.</th>
            <th>Departial Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% flight.forEach((f) =>{ %>
        
        <tr>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.departs %></td>
            <td><a href="/flights/<%= f._id %>">Details</a></td>
        </tr>

        <% }) %>
    </tbody>
</table>

<%- include('../partials/footer') %>